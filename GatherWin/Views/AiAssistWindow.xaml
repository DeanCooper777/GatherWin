<Window x:Class="GatherWin.Views.AiAssistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Writing Assist" Width="520" Height="480"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Background="#F5F5F5">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Original text -->
        <TextBlock Grid.Row="0" Text="Original Text" FontSize="12" FontWeight="SemiBold" Foreground="#555"
                   Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" x:Name="OriginalTextBox" TextWrapping="Wrap" AcceptsReturn="True"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 FontSize="12" Padding="8,6" Background="#FAFAFA"
                 BorderBrush="#BDBDBD" BorderThickness="1"/>

        <!-- AI-modified text -->
        <TextBlock Grid.Row="2" Text="AI-Modified Text" FontSize="12" FontWeight="SemiBold" Foreground="#555"
                   Margin="0,8,0,4"/>
        <TextBox Grid.Row="3" x:Name="ModifiedTextBox" TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="12" Padding="8,6"
                 BorderBrush="#3498DB" BorderThickness="1"/>

        <!-- Controls -->
        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="1 Mild" FontSize="11" Foreground="#777" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <Slider x:Name="CreativitySlider" Width="140" Minimum="1" Maximum="100"
                        Value="50" TickFrequency="1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>
                <TextBlock Text="100 Wild" FontSize="11" Foreground="#777" VerticalAlignment="Center" Margin="6,0,0,0"/>
            </StackPanel>

            <CheckBox Grid.Column="2" x:Name="IncludeContextCheck" Content="Include thread context"
                      VerticalAlignment="Center" FontSize="11" IsChecked="True"/>
        </Grid>

        <!-- Status and buttons -->
        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Name="StatusText" FontSize="11" Foreground="#777"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Generate" Padding="12,6" FontSize="12" Margin="0,0,6,0"
                        Background="#3498DB" Foreground="White" BorderThickness="0"
                        FontWeight="SemiBold" Cursor="Hand" Click="Generate_Click"/>
                <Button Content="Accept" Padding="12,6" FontSize="12" Margin="0,0,6,0"
                        Background="#27AE60" Foreground="White" BorderThickness="0"
                        FontWeight="SemiBold" Cursor="Hand" Click="Accept_Click"/>
                <Button Content="Cancel" Padding="12,6" FontSize="12"
                        IsCancel="True" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
