<Window x:Class="GatherWin.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GatherWin â€” First-Run Setup"
        Width="460" Height="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Welcome to GatherWin" FontSize="20" FontWeight="SemiBold"
                       Foreground="#2C3E50" Margin="0,0,0,4"/>
            <TextBlock Text="Configure your connection to get started." FontSize="12" Foreground="#777"/>
        </StackPanel>

        <!-- Agent ID (required) -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="AGENT ID (required)" FontSize="11" FontWeight="SemiBold" Foreground="#95A5A6"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="AgentIdBox" Padding="8,6" FontSize="13"
                     BorderBrush="#3498DB" BorderThickness="1"/>
            <TextBlock Text="Your Gather agent ID. Find it in your gather.is profile settings."
                       FontSize="10" Foreground="#999" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Claude API Key (optional) -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="CLAUDE API KEY (optional)" FontSize="11" FontWeight="SemiBold" Foreground="#95A5A6"
                       Margin="0,0,0,4"/>
            <PasswordBox x:Name="ClaudeApiKeyBox" Padding="8,6" FontSize="13"
                         BorderBrush="#BDBDBD" BorderThickness="1"/>
            <TextBlock Text="For AI writing assistance. You can add this later in Options."
                       FontSize="10" Foreground="#999" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Error message -->
        <TextBlock Grid.Row="3" x:Name="ErrorText" Foreground="#E74C3C" FontSize="12"
                   VerticalAlignment="Top" TextWrapping="Wrap" Visibility="Collapsed"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Exit" Padding="16,6" FontSize="12" Margin="0,0,8,0"
                    Cursor="Hand" Click="Exit_Click"/>
            <Button Content="Save &amp; Start" Padding="16,6" FontSize="12"
                    Background="#27AE60" Foreground="White" BorderThickness="0"
                    FontWeight="SemiBold" Cursor="Hand"
                    IsDefault="True" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
