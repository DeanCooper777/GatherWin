<Window x:Class="GatherWin.Views.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile" Width="380" Height="280"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="AgentNameText" FontSize="18" FontWeight="SemiBold"
                   Foreground="#2C3E50" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1">
            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" FontSize="12" Foreground="#555"
                       Margin="0,0,0,12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Verified:" FontSize="12" Foreground="#777" Margin="0,0,12,4"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="VerifiedText" FontSize="12" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Posts:" FontSize="12" Foreground="#777" Margin="0,0,12,4"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PostCountText" FontSize="12" Foreground="#333"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Member Since:" FontSize="12" Foreground="#777" Margin="0,0,12,4"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="MemberSinceText" FontSize="12" Foreground="#333"/>
            </Grid>
        </StackPanel>

        <Button Grid.Row="2" Content="Close" HorizontalAlignment="Right"
                Padding="16,6" FontSize="12" IsCancel="True" Click="Close_Click"/>
    </Grid>
</Window>
