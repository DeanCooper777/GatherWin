<Window x:Class="GatherWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:converters="clr-namespace:GatherWin.Converters"
        xmlns:models="clr-namespace:GatherWin.Models"
        xmlns:vm="clr-namespace:GatherWin.ViewModels"
        xmlns:helpers="clr-namespace:GatherWin.Helpers"
        Title="GatherWin v1.0 — OnTheEdgeOfReality"
        Width="900" Height="700"
        MinWidth="600" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <converters:StreamTypeToBrushConverter x:Key="StreamToBg"/>
        <converters:StreamTypeToBorderBrushConverter x:Key="StreamToBorder"/>
        <converters:InverseBooleanConverter x:Key="InverseBool"/>
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVis"/>
        <converters:TimestampToRelativeConverter x:Key="TimeAgo"/>
        <converters:NotZeroToVisibilityConverter x:Key="NotZeroToVis"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:AuthorBodyFormatterConverter x:Key="AuthorBodyFormatter"/>
        <converters:WhatsNewCategoryToBrushConverter x:Key="CategoryToBrush"/>
        <converters:IndentToMarginConverter x:Key="IndentToMargin"/>
        <converters:IsCurrentUserToVisibilityConverter x:Key="IsCurrentUserToVis"/>
        <converters:CharCountConverter x:Key="CharCount"/>
        <converters:CharCountBrushConverter x:Key="CharCountBrush"/>
        <converters:LogEntryTypeToBrushConverter x:Key="LogEntryBrush"/>

        <!-- What's New card template -->
        <DataTemplate x:Key="WhatsNewCardTemplate" DataType="{x:Type vm:WhatsNewEntry}">
            <Border Margin="0,0,0,4" Padding="10,8"
                    CornerRadius="4" Cursor="Hand"
                    Background="{Binding Category, Converter={StaticResource CategoryToBrush}}"
                    BorderBrush="{Binding Category, Converter={StaticResource CategoryToBrush}, ConverterParameter=border}"
                    BorderThickness="1,1,1,1"
                    MouseLeftButtonUp="WhatsNewCard_MouseLeftButtonUp">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="{Binding Category}" FontWeight="SemiBold" FontSize="11"
                                       Foreground="#555" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Title}" FontSize="12" FontWeight="SemiBold" Foreground="#333"
                                       TextTrimming="CharacterEllipsis" MaxWidth="500"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Border Background="#E74C3C" CornerRadius="4" Padding="4,1" Margin="0,0,6,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsNew, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="NEW" Foreground="White" FontSize="9" FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="{Binding Timestamp, Converter={StaticResource TimeAgo}}"
                                       FontSize="10" Foreground="#999" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Description (markdown rendered) -->
                    <RichTextBox Grid.Row="1"
                                 helpers:MarkdownHelper.MarkdownText="{Binding Description, Mode=OneWay}"
                                 IsReadOnly="True" IsReadOnlyCaretVisible="True"
                                 BorderThickness="0" Background="Transparent" Padding="0"
                                 FontSize="12" Foreground="#444" Margin="0,4,0,0"
                                 Cursor="IBeam" Focusable="True"
                                 IsHitTestVisible="{Binding IsExpanded}"
                                 IsDocumentEnabled="True"
                                 VerticalScrollBarVisibility="Disabled">
                        <RichTextBox.Style>
                            <Style TargetType="RichTextBox">
                                <Setter Property="MaxHeight" Value="60"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                        <Setter Property="MaxHeight" Value="{x:Static system:Double.PositiveInfinity}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RichTextBox.Style>
                    </RichTextBox>

                    <!-- Detail line (visible when expanded) -->
                    <TextBlock Grid.Row="2"
                               Text="{Binding Detail}" TextWrapping="Wrap"
                               FontSize="10" Foreground="#777" Margin="0,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Activity card template — shared across all tabs -->
        <DataTemplate x:Key="ActivityCardTemplate" DataType="{x:Type models:ActivityItem}">
            <Border Margin="0,0,0,4" Padding="10,8"
                    CornerRadius="4" Cursor="Hand"
                    Background="{Binding Type, Converter={StaticResource StreamToBg}}"
                    BorderBrush="{Binding Type, Converter={StaticResource StreamToBorder}}"
                    BorderThickness="1,1,1,1"
                    MouseLeftButtonUp="ActivityCard_MouseLeftButtonUp">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- Header: Type + Title + Author -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock FontWeight="SemiBold" FontSize="12" Margin="0,0,6,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="POST"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ActivityType.Comment}">
                                                <Setter Property="Text" Value="COMMENT"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ActivityType.Inbox}">
                                                <Setter Property="Text" Value="INBOX"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ActivityType.FeedPost}">
                                                <Setter Property="Text" Value="POST"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ActivityType.Channel}">
                                                <Setter Property="Text" Value="CHANNEL"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding Title}" FontSize="12" Foreground="#555"
                                       TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                            <TextBlock Text=" — " Foreground="#999" FontSize="11"
                                       Visibility="{Binding Author, Converter={StaticResource NotNullToVis}}"/>
                            <!-- Feature 9: Clickable author name -->
                            <TextBlock Text="{Binding Author}" FontSize="11" Foreground="#3498DB"
                                       Cursor="Hand" MouseLeftButtonUp="AuthorName_Click">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <!-- Feature 6: Edit button (own messages only) -->
                        <Button Grid.Column="1" Content="···" FontWeight="Bold" FontSize="12"
                                Padding="6,0" Margin="4,0,0,0" Cursor="Hand"
                                Background="Transparent" BorderThickness="0" Foreground="#999"
                                Visibility="{Binding Author, Converter={StaticResource IsCurrentUserToVis}}"
                                Click="MessageOptions_Click" VerticalAlignment="Center"
                                ToolTip="Options">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit" Click="EditMessage_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                        <!-- Vote + Score + Timestamp -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="&#x25B2;" FontSize="10" Padding="3,0" Margin="0,0,1,0"
                                    Background="Transparent" BorderThickness="0" Foreground="#27AE60"
                                    Cursor="Hand" ToolTip="Upvote" Click="Upvote_Click"/>
                            <TextBlock Text="{Binding Score, Mode=OneWay}" FontSize="10" FontWeight="SemiBold"
                                       Foreground="#27AE60" VerticalAlignment="Center" Margin="0,0,1,0"
                                       MinWidth="16" TextAlignment="Center"/>
                            <Button Content="&#x25BC;" FontSize="10" Padding="3,0" Margin="0,0,8,0"
                                    Background="Transparent" BorderThickness="0" Foreground="#999"
                                    Cursor="Hand" ToolTip="Downvote" Click="Downvote_Click"/>
                            <TextBlock Text="{Binding Timestamp, Converter={StaticResource TimeAgo}}"
                                       FontSize="10" Foreground="#999" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Body (markdown rendered) -->
                    <RichTextBox Grid.Row="1"
                                 helpers:MarkdownHelper.MarkdownText="{Binding Body, Mode=OneWay}"
                                 helpers:MarkdownHelper.AuthorPrefix="{Binding Author, Mode=OneWay}"
                                 IsReadOnly="True" IsReadOnlyCaretVisible="True"
                                 BorderThickness="0" Background="Transparent" Padding="0"
                                 FontSize="12" Foreground="#333" Margin="0,4,0,0"
                                 Cursor="IBeam" Focusable="True"
                                 IsHitTestVisible="{Binding IsExpanded}"
                                 IsDocumentEnabled="True"
                                 VerticalScrollBarVisibility="Disabled">
                        <RichTextBox.Style>
                            <Style TargetType="RichTextBox">
                                <Setter Property="MaxHeight" Value="80"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                        <Setter Property="MaxHeight" Value="{x:Static system:Double.PositiveInfinity}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RichTextBox.Style>
                    </RichTextBox>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Inbox card template -->
        <DataTemplate x:Key="InboxCardTemplate" DataType="{x:Type models:ActivityItem}">
            <Border Margin="0,0,0,4" Padding="10,8"
                    CornerRadius="4" Cursor="Hand"
                    Background="{Binding Type, Converter={StaticResource StreamToBg}}"
                    BorderBrush="{Binding Type, Converter={StaticResource StreamToBorder}}"
                    BorderThickness="1,1,1,1"
                    MouseLeftButtonUp="InboxCard_MouseLeftButtonUp">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="INBOX" FontWeight="SemiBold" FontSize="12" Margin="0,0,6,0"/>
                            <Border Background="#E74C3C" CornerRadius="3" Padding="4,1" Margin="0,0,4,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsNew, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="NEW" FontSize="9" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" FontSize="12" Foreground="#555"
                                       TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                            <TextBlock Text=" &#x2192;" FontSize="12" Foreground="#3498DB" FontWeight="Bold"
                                       VerticalAlignment="Center" Margin="4,0,0,0"
                                       ToolTip="Click to view referenced post"
                                       Visibility="{Binding PostId, Converter={StaticResource NotNullToVis}}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="Read" FontSize="9" Padding="4,1" Margin="0,0,4,0"
                                    Background="Transparent" Foreground="#27AE60"
                                    BorderBrush="#27AE60" BorderThickness="1"
                                    Cursor="Hand" Click="InboxMarkRead_Click" ToolTip="Mark as read"/>
                            <Button Content="&#x2715;" FontSize="9" Padding="4,1" Margin="0,0,6,0"
                                    Background="Transparent" Foreground="#E74C3C"
                                    BorderBrush="#E74C3C" BorderThickness="1"
                                    Cursor="Hand" Click="InboxDelete_Click" ToolTip="Delete message"/>
                            <TextBlock Text="{Binding Timestamp, Converter={StaticResource TimeAgo}}"
                                       FontSize="10" Foreground="#999" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Body (markdown rendered) -->
                    <RichTextBox Grid.Row="1"
                                 helpers:MarkdownHelper.MarkdownText="{Binding Body, Mode=OneWay}"
                                 helpers:MarkdownHelper.AuthorPrefix="{Binding Author, Mode=OneWay}"
                                 IsReadOnly="True" IsReadOnlyCaretVisible="True"
                                 BorderThickness="0" Background="Transparent" Padding="0"
                                 FontSize="12" Foreground="#333" Margin="0,4,0,0"
                                 Cursor="IBeam" Focusable="True"
                                 IsHitTestVisible="{Binding IsExpanded}"
                                 IsDocumentEnabled="True"
                                 VerticalScrollBarVisibility="Disabled">
                        <RichTextBox.Style>
                            <Style TargetType="RichTextBox">
                                <Setter Property="MaxHeight" Value="80"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                        <Setter Property="MaxHeight" Value="{x:Static system:Double.PositiveInfinity}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RichTextBox.Style>
                    </RichTextBox>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Threaded discussion comment template (reused in Discussions, Feed, and Channel panels) -->
        <DataTemplate x:Key="DiscussionCommentTemplate" DataType="{x:Type vm:DiscussionComment}">
            <Border Padding="8,6" CornerRadius="4" Cursor="Hand"
                    Margin="{Binding IndentLevel, Converter={StaticResource IndentToMargin}}"
                    MouseLeftButtonUp="DiscussionComment_MouseLeftButtonUp">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IndentLevel}" Value="0">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <!-- Feature 9: Clickable author -->
                            <TextBlock Text="{Binding Author}" FontWeight="SemiBold"
                                       FontSize="11" Foreground="#3498DB" Margin="0,0,8,0"
                                       Cursor="Hand" MouseLeftButtonUp="AuthorName_Click">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding Timestamp, Converter={StaticResource TimeAgo}}"
                                       FontSize="10" Foreground="#999"/>
                            <!-- NEW badge for unread messages -->
                            <Border Background="#E74C3C" CornerRadius="3" Padding="4,1" Margin="6,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsNew, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="NEW" FontSize="9" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <!-- Feature 6: Edit button on own comments -->
                        <Button Grid.Column="1" Content="···" FontWeight="Bold" FontSize="10"
                                Padding="4,0" Margin="4,0,0,0" Cursor="Hand"
                                Background="Transparent" BorderThickness="0" Foreground="#999"
                                Visibility="{Binding Author, Converter={StaticResource IsCurrentUserToVis}}"
                                Click="MessageOptions_Click" VerticalAlignment="Center">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit" Click="EditMessage_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                        <!-- Reply button -->
                        <Button Grid.Column="2" Content="Reply"
                                Click="ReplyToComment_Click"
                                FontSize="9" Padding="6,1"
                                Background="Transparent" Foreground="#3498DB"
                                BorderBrush="#3498DB" BorderThickness="1"
                                Cursor="Hand" VerticalAlignment="Center"/>
                    </Grid>
                    <RichTextBox Grid.Row="1"
                                 helpers:MarkdownHelper.MarkdownText="{Binding Body, Mode=OneWay}"
                                 helpers:MarkdownHelper.AuthorPrefix="{Binding Author, Mode=OneWay}"
                                 IsReadOnly="True" IsDocumentEnabled="True"
                                 BorderThickness="0" Background="Transparent" Padding="0"
                                 FontSize="12" Foreground="#333" Margin="0,2,0,0"
                                 Cursor="IBeam" Focusable="True"
                                 IsHitTestVisible="{Binding IsExpanded}"
                                 VerticalScrollBarVisibility="Disabled">
                        <RichTextBox.Style>
                            <Style TargetType="RichTextBox">
                                <Setter Property="MaxHeight" Value="80"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                        <Setter Property="MaxHeight" Value="{x:Static system:Double.PositiveInfinity}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RichTextBox.Style>
                    </RichTextBox>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Watched Discussion item template for left panel -->
        <DataTemplate x:Key="WatchedDiscussionTemplate" DataType="{x:Type vm:WatchedDiscussionItem}">
            <Border Margin="0,0,0,3" Padding="8,6" CornerRadius="4"
                    Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Title}" FontSize="12" FontWeight="SemiBold"
                                   Foreground="#333" TextTrimming="CharacterEllipsis"/>
                        <Border Grid.Column="1" Background="#E74C3C" CornerRadius="6" Padding="4,0"
                                Visibility="{Binding NewCommentCount, Converter={StaticResource NotZeroToVis}}">
                            <TextBlock Text="{Binding NewCommentCount}" Foreground="White" FontSize="9"/>
                        </Border>
                    </Grid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="{Binding Author}" FontSize="10" Foreground="#777" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding CommentCount, StringFormat={}{0} comments}"
                                   FontSize="10" Foreground="#999"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="{Binding FontScale}" ScaleY="{Binding FontScale}"/>
        </Grid.LayoutTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="Auto"/>  <!-- Account bar -->
            <RowDefinition Height="*"/>     <!-- Tabs -->
            <RowDefinition Height="Auto"/>  <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- ═══ Row 0: Toolbar ═══ -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="GatherWin" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" — OnTheEdgeOfReality" FontSize="14" Foreground="#95A5A6"
                               VerticalAlignment="Bottom" Margin="4,0,0,1"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding IsConnecting, Converter={StaticResource InverseBool}}"
                            Padding="16,6" FontSize="13" FontWeight="SemiBold"
                            Cursor="Hand" Margin="8,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="Connect"/>
                                <Setter Property="Background" Value="#27AE60"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Content" Value="Disconnect"/>
                                        <Setter Property="Background" Value="#E74C3C"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsConnecting}" Value="True">
                                        <Setter Property="Content" Value="Connecting..."/>
                                        <Setter Property="Background" Value="#95A5A6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Options gear button -->
                    <Button Command="{Binding OpenOptionsCommand}"
                            Padding="8,6" FontSize="15" Cursor="Hand" Margin="6,0,0,0"
                            Background="Transparent" Foreground="#BDC3C7" BorderThickness="0"
                            ToolTip="Options" FontFamily="Segoe UI Symbol"
                            Content="&#x2699;"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══ Row 1: Account status bar ═══ -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="12,6"
                BorderBrush="#DEE2E6" BorderThickness="0,0,0,1"
                Visibility="{Binding Account.IsAuthenticated, Converter={StaticResource BoolToVis}}">
            <StackPanel>
            <WrapPanel>
                <TextBlock FontSize="12" Margin="0,0,16,0">
                    <Run Text="Balance: " Foreground="#555"/>
                    <Run Text="{Binding Account.BalanceBch, Mode=OneWay}" FontWeight="SemiBold" Foreground="#27AE60"/>
                    <Run Text=" BCH" Foreground="#555"/>
                    <Run Text=" (~" Foreground="#999"/>
                    <Run Text="{Binding Account.BalanceUsd, Mode=OneWay}" Foreground="#999"/>
                    <Run Text=")" Foreground="#999"/>
                </TextBlock>
                <TextBlock FontSize="12" Margin="0,0,16,0">
                    <Run Text="~" Foreground="#999"/>
                    <Run Text="{Binding Account.PostsAvailable, Mode=OneWay, StringFormat=N0}" Foreground="#555"/>
                    <Run Text=" posts" Foreground="#999"/>
                </TextBlock>
                <TextBlock FontSize="12" Margin="0,0,16,0">
                    <Run Text="Free: " Foreground="#555"/>
                    <Run Text="{Binding Account.FreePostsRemaining, Mode=OneWay}" Foreground="#27AE60"/>
                    <Run Text=" posts/wk + " Foreground="#999"/>
                    <Run Text="{Binding Account.FreeCommentsRemaining, Mode=OneWay}" Foreground="#27AE60"/>
                    <Run Text=" comments/day" Foreground="#999"/>
                </TextBlock>
                <TextBlock FontSize="11" Foreground="#999" Text="{Binding TokenExpiryDisplay}"/>
                <Button Content="Deposit" Command="{Binding Account.ToggleDepositCommand}"
                        FontSize="10" Padding="8,2" Margin="12,0,0,0" Cursor="Hand"
                        Background="#27AE60" Foreground="White" BorderThickness="0"
                        VerticalAlignment="Center" ToolTip="Show BCH deposit address"/>
                <Button Content="Feedback" Command="{Binding Account.ToggleFeedbackCommand}"
                        FontSize="10" Padding="8,2" Margin="12,0,0,0" Cursor="Hand"
                        Background="#8E44AD" Foreground="White" BorderThickness="0"
                        VerticalAlignment="Center" ToolTip="Send platform feedback"/>
            </WrapPanel>
            <!-- Feedback form (collapsible) -->
            <Border Background="#F3E5F5" Padding="10,8" CornerRadius="4" Margin="0,6,0,0"
                    BorderBrush="#CE93D8" BorderThickness="1"
                    Visibility="{Binding Account.ShowFeedback, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <TextBlock Text="Send Platform Feedback" FontSize="12" FontWeight="SemiBold"
                               Foreground="#8E44AD" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Rating: " FontSize="11" Foreground="#555" VerticalAlignment="Center"/>
                        <Button Content="1" Tag="1" Click="FeedbackRating_Click" Padding="6,2" Margin="2,0" Cursor="Hand"
                                FontSize="11" BorderThickness="1" BorderBrush="#CE93D8"/>
                        <Button Content="2" Tag="2" Click="FeedbackRating_Click" Padding="6,2" Margin="2,0" Cursor="Hand"
                                FontSize="11" BorderThickness="1" BorderBrush="#CE93D8"/>
                        <Button Content="3" Tag="3" Click="FeedbackRating_Click" Padding="6,2" Margin="2,0" Cursor="Hand"
                                FontSize="11" BorderThickness="1" BorderBrush="#CE93D8"/>
                        <Button Content="4" Tag="4" Click="FeedbackRating_Click" Padding="6,2" Margin="2,0" Cursor="Hand"
                                FontSize="11" BorderThickness="1" BorderBrush="#CE93D8"/>
                        <Button Content="5" Tag="5" Click="FeedbackRating_Click" Padding="6,2" Margin="2,0" Cursor="Hand"
                                FontSize="11" BorderThickness="1" BorderBrush="#CE93D8"/>
                        <TextBlock Text="{Binding Account.FeedbackRating, StringFormat='Selected: {0}/5'}"
                                   FontSize="11" Foreground="#8E44AD" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                    <TextBox Text="{Binding Account.FeedbackMessage, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="11" Padding="6,4" Margin="0,0,0,6"
                             AcceptsReturn="True" TextWrapping="Wrap" MinHeight="40" MaxHeight="80"
                             BorderBrush="#CE93D8" BorderThickness="1">
                        <TextBox.Tag>Message (optional)</TextBox.Tag>
                    </TextBox>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Send Feedback" Command="{Binding Account.SendFeedbackCommand}"
                                Background="#8E44AD" Foreground="White" Padding="12,4"
                                FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                IsEnabled="{Binding Account.IsSendingFeedback, Converter={StaticResource InverseBool}}"/>
                        <TextBlock Text="{Binding Account.FeedbackError}" Foreground="#E74C3C"
                                   FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0"
                                   Visibility="{Binding Account.FeedbackError, Converter={StaticResource NotNullToVis}}"/>
                        <TextBlock Text="{Binding Account.FeedbackSuccess}" Foreground="#27AE60"
                                   FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0"
                                   Visibility="{Binding Account.FeedbackSuccess, Converter={StaticResource NotNullToVis}}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- BCH Deposit address (collapsible) -->
            <Border Background="#E8F5E9" Padding="10,8" CornerRadius="4" Margin="0,6,0,0"
                    BorderBrush="#81C784" BorderThickness="1"
                    Visibility="{Binding Account.ShowDeposit, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <TextBlock Text="BCH Deposit Address" FontSize="12" FontWeight="SemiBold"
                               Foreground="#2E7D32" Margin="0,0,0,6"/>
                    <TextBlock Text="Send Bitcoin Cash (BCH) to this address to fund your account:"
                               FontSize="11" Foreground="#555" Margin="0,0,0,4"/>
                    <Border Background="White" CornerRadius="3" Padding="8,6" BorderBrush="#81C784" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding Account.DepositAddress, Mode=OneWay}"
                                     IsReadOnly="True" FontSize="12" FontFamily="Consolas"
                                     Foreground="#2E7D32" Background="Transparent" BorderThickness="0"
                                     VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Copy" Padding="8,2" Margin="6,0,0,0"
                                    FontSize="10" Background="#27AE60" Foreground="White"
                                    BorderThickness="0" Cursor="Hand" Click="CopyDepositAddress_Click"/>
                        </Grid>
                    </Border>
                    <TextBlock Text="Deposits typically confirm within a few minutes."
                               FontSize="10" Foreground="#888" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
            </StackPanel>
        </Border>

        <!-- ═══ Row 2: Tab Control ═══ -->
        <TabControl Grid.Row="2" Margin="0"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Background="Transparent"
                    BorderThickness="0">

            <!-- All Activity Tab -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="All" FontSize="13" Padding="8,4"/>
                </TabItem.Header>
                <Grid Margin="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  CanContentScroll="False">
                        <ItemsControl ItemsSource="{Binding AllActivity}"
                                      ItemTemplate="{StaticResource ActivityCardTemplate}"
                                      VirtualizingStackPanel.ScrollUnit="Pixel"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- ═══ Discussions Tab (Feature 1: renamed from Comments, split view) ═══ -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Discussions" FontSize="13" Padding="8,4"/>
                        <Border Background="#E74C3C" CornerRadius="8" Padding="5,1" Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Visibility="{Binding Comments.NewCount, Converter={StaticResource NotZeroToVis}}">
                            <TextBlock Text="{Binding Comments.NewCount}" Foreground="White" FontSize="10"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" MinWidth="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Watched discussion list (pixel-based scrolling) -->
                    <ListBox Grid.Column="0" ItemsSource="{Binding Comments.Discussions}"
                             SelectedItem="{Binding Comments.SelectedDiscussion}"
                             ItemTemplate="{StaticResource WatchedDiscussionTemplate}"
                             BorderThickness="0" Background="Transparent"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.CanContentScroll="False"
                             SelectionChanged="DiscussionList_SelectionChanged"
                             PreviewMouseLeftButtonUp="DiscussionList_PreviewMouseLeftButtonUp"/>

                    <!-- Splitter -->
                    <GridSplitter Grid.Column="1" Width="4" Background="#DEE2E6"
                                  HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                  Visibility="{Binding Comments.HasDiscussion, Converter={StaticResource BoolToVis}}"/>

                    <!-- Right: Discussion panel -->
                    <Grid Grid.Column="2"
                          Visibility="{Binding Comments.HasDiscussion, Converter={StaticResource BoolToVis}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>    <!-- Scrollable content -->
                            <RowDefinition Height="Auto"/> <!-- Reply panel (fixed) -->
                        </Grid.RowDefinitions>

                        <!-- Scrollable: header + body + comments -->
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="4,0,0,0">
                            <StackPanel>
                                <!-- Post header -->
                                <Border Background="#E3F2FD" Padding="10,8" CornerRadius="4"
                                        BorderBrush="#64B5F6" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Comments.DiscussionTitle}" FontWeight="Bold"
                                                       FontSize="13" Foreground="#1565C0" TextWrapping="Wrap"/>
                                            <TextBlock FontSize="10" Foreground="#777" Margin="0,2,0,0">
                                                <Run Text="by "/>
                                                <Run Text="{Binding Comments.DiscussionAuthor, Mode=OneWay}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="Refresh"
                                                Command="{Binding Comments.RefreshDiscussionCommand}"
                                                Background="#3498DB" Foreground="White" Padding="8,3"
                                                FontSize="10" BorderThickness="0" Cursor="Hand" Margin="6,0,0,0"
                                                VerticalAlignment="Top"/>
                                        <!-- Feature 5: Unsubscribe button -->
                                        <Button Grid.Column="2" Content="Unsub"
                                                Command="{Binding Comments.UnsubscribeCommand}"
                                                Background="#E67E22" Foreground="White" Padding="8,3"
                                                FontSize="10" BorderThickness="0" Cursor="Hand" Margin="4,0,0,0"
                                                VerticalAlignment="Top" ToolTip="Unsubscribe from this discussion"/>
                                        <Button Grid.Column="3" Content="X"
                                                Click="CloseDiscussionsPanel_Click"
                                                Background="#E74C3C" Foreground="White" Padding="6,2"
                                                FontSize="10" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                                Margin="4,0,0,0" VerticalAlignment="Top"
                                                ToolTip="Close discussion panel"/>
                                    </Grid>
                                </Border>

                                <!-- Post body -->
                                <Border Background="#FAFAFA" Padding="10,8" Margin="0,4,0,0"
                                        BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4"
                                        MouseLeftButtonUp="DiscussionsPostBody_MouseLeftButtonUp" Cursor="Hand">
                                    <RichTextBox helpers:MarkdownHelper.MarkdownText="{Binding Comments.DiscussionBody, Mode=OneWay}"
                                                 IsReadOnly="True" IsDocumentEnabled="True"
                                                 BorderThickness="0" Background="Transparent" Padding="0"
                                                 FontSize="12" Foreground="#333" Cursor="IBeam"
                                                 Focusable="True" VerticalScrollBarVisibility="Disabled"
                                                 IsHitTestVisible="{Binding Comments.IsPostBodyExpanded}">
                                        <RichTextBox.Style>
                                            <Style TargetType="RichTextBox">
                                                <Setter Property="MaxHeight" Value="120"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Comments.IsPostBodyExpanded}" Value="True">
                                                        <Setter Property="MaxHeight" Value="{x:Static system:Double.PositiveInfinity}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </RichTextBox.Style>
                                    </RichTextBox>
                                </Border>

                                <!-- Comments list -->
                                <ItemsControl ItemsSource="{Binding Comments.DiscussionComments}"
                                              ItemTemplate="{StaticResource DiscussionCommentTemplate}"
                                              Margin="0,4,0,0"/>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Loading indicator -->
                        <TextBlock Grid.Row="0" Text="Loading discussion..."
                                   FontStyle="Italic" Foreground="#3498DB" FontSize="12"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding Comments.IsLoadingDiscussion, Converter={StaticResource BoolToVis}}"/>

                        <!-- Reply panel -->
                        <Border Grid.Row="1" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0"
                                Padding="4,8,0,0" Margin="4,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Replying-to indicator -->
                                <Border Grid.Row="0" Background="#E3F2FD" Padding="6,4" CornerRadius="3"
                                        Margin="0,0,0,4"
                                        Visibility="{Binding Comments.ReplyToComment, Converter={StaticResource NotNullToVis}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="10" Foreground="#1565C0" VerticalAlignment="Center">
                                            <Run Text="Replying to "/>
                                            <Run Text="{Binding Comments.ReplyToComment.Author, Mode=OneWay}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <Button Content="X" Click="CancelDiscussionsReplyTo_Click"
                                                FontSize="9" Padding="4,1" Margin="8,0,0,0"
                                                Background="Transparent" Foreground="#E74C3C"
                                                BorderBrush="#E74C3C" BorderThickness="1"
                                                Cursor="Hand" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Reply text + AI assist -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding Comments.DiscussionReplyText, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             FontSize="12" Padding="8,6"
                                             BorderBrush="#64B5F6" BorderThickness="1"
                                             SpellCheck.IsEnabled="True"
                                             GotFocus="DiscussionsReplyTextBox_GotFocus"
                                             LostFocus="DiscussionsReplyTextBox_LostFocus">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="MinHeight" Value="36"/>
                                                <Setter Property="MaxHeight" Value="60"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Comments.IsReplyExpanded}" Value="True">
                                                        <Setter Property="MinHeight" Value="100"/>
                                                        <Setter Property="MaxHeight" Value="200"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <!-- Feature 7: AI Assist button -->
                                    <Button Grid.Column="1" Content="AI" FontSize="10" FontWeight="Bold"
                                            Padding="6,4" Margin="4,0,0,0" Cursor="Hand"
                                            Background="#8E44AD" Foreground="White" BorderThickness="0"
                                            VerticalAlignment="Top" ToolTip="AI Writing Assist"
                                            Click="AiAssist_DiscussionsReply_Click"/>
                                </Grid>

                                <StackPanel Grid.Row="2" Orientation="Horizontal"
                                            HorizontalAlignment="Right" Margin="0,6,0,0">
                                    <TextBlock Text="{Binding Comments.DiscussionReplyText, Converter={StaticResource CharCount}}"
                                               Foreground="{Binding Comments.DiscussionReplyText, Converter={StaticResource CharCountBrush}}"
                                               FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Comments.DiscussionSendError}" Foreground="#E74C3C"
                                               FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                               TextWrapping="Wrap" MaxWidth="300"
                                               Visibility="{Binding Comments.DiscussionSendError, Converter={StaticResource NotNullToVis}}"/>
                                    <TextBlock Text="Sending..." FontStyle="Italic" Foreground="#3498DB"
                                               FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                               Visibility="{Binding Comments.IsSendingDiscussionReply, Converter={StaticResource BoolToVis}}"/>
                                    <Button Command="{Binding Comments.SendDiscussionReplyCommand}"
                                            Background="#3498DB" Foreground="White" Padding="16,6"
                                            FontWeight="SemiBold" FontSize="12" BorderThickness="0" Cursor="Hand"
                                            IsEnabled="{Binding Comments.IsSendingDiscussionReply, Converter={StaticResource InverseBool}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Content" Value="Reply"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Comments.ReplyToComment, Converter={StaticResource NotNullToVis}}" Value="Visible">
                                                        <Setter Property="Content" Value="Reply to Thread"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Placeholder when no discussion is selected -->
                    <Border Grid.Column="2" Margin="4,0,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Comments.HasDiscussion}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="Select a discussion from the list to view its thread"
                                   FontSize="12" Foreground="#999" FontStyle="Italic"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextWrapping="Wrap" TextAlignment="Center" Padding="20"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Inbox Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Inbox" FontSize="13" Padding="8,4"/>
                        <Border Background="#E74C3C" CornerRadius="8" Padding="5,1" Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Visibility="{Binding Inbox.NewCount, Converter={StaticResource NotZeroToVis}}">
                            <TextBlock Text="{Binding Inbox.NewCount}" Foreground="White" FontSize="10"/>
                        </Border>
                        <TextBlock FontSize="10" Foreground="#999" VerticalAlignment="Center" Margin="4,0,0,0"
                                   Visibility="{Binding Inbox.UnreadCount, Converter={StaticResource NotZeroToVis}}">
                            <Run Text="("/>
                            <Run Text="{Binding Inbox.UnreadCount, Mode=OneWay}"/>
                            <Run Text=" unread)"/>
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="8">
                    <ListBox ItemsSource="{Binding Inbox.Messages}"
                             SelectedItem="{Binding Inbox.SelectedMessage}"
                             ItemTemplate="{StaticResource InboxCardTemplate}"
                             BorderThickness="0" Background="Transparent"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Grid>
            </TabItem>

            <!-- ═══ Feed Tab (Feature 4: split view with discussion panel) ═══ -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Feed" FontSize="13" Padding="8,4"/>
                        <Border Background="#E74C3C" CornerRadius="8" Padding="5,1" Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Visibility="{Binding Feed.NewCount, Converter={StaticResource NotZeroToVis}}">
                            <TextBlock Text="{Binding Feed.NewCount}" Foreground="White" FontSize="10"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Compose + Search + Feed list -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar: Compose + Sort -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,8">
                            <DockPanel Margin="0,0,0,4">
                                <Button Content="＋ New Post"
                                        Command="{Binding Feed.ShowComposeCommand}"
                                        Background="#2980B9" Foreground="White" Padding="12,6"
                                        FontSize="12" FontWeight="SemiBold" BorderThickness="0"
                                        Cursor="Hand" DockPanel.Dock="Left">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Feed.IsComposing}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Sort:" FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <Button Command="{Binding Feed.ToggleSortCommand}"
                                            Content="{Binding Feed.SortLabel}"
                                            FontSize="11" FontWeight="SemiBold" Padding="8,3"
                                            Background="#ECF0F1" Foreground="#2C3E50"
                                            BorderBrush="#BDC3C7" BorderThickness="1"
                                            Cursor="Hand" ToolTip="Toggle between Newest and Top Score"/>
                                </StackPanel>
                            </DockPanel>

                            <!-- Compose form -->
                            <Border Background="#E8F4FD" Padding="10" CornerRadius="4"
                                    BorderBrush="#64B5F6" BorderThickness="1"
                                    Visibility="{Binding Feed.IsComposing, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <TextBlock Text="New Post" FontSize="13" FontWeight="SemiBold"
                                               Foreground="#1565C0" Margin="0,0,0,6"/>
                                    <TextBlock Text="Title" FontSize="11" Foreground="#555" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Feed.NewPostTitle, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="12" Padding="8,6" Margin="0,0,0,6"
                                             BorderBrush="#64B5F6" BorderThickness="1"
                                             SpellCheck.IsEnabled="True"/>
                                    <TextBlock Text="Body" FontSize="11" Foreground="#555" Margin="0,0,0,2"/>
                                    <!-- Feature 7: Body box + AI assist -->
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="FeedComposeBodyBox"
                                                 Text="{Binding Feed.NewPostBody, UpdateSourceTrigger=PropertyChanged}"
                                                 AcceptsReturn="True" TextWrapping="Wrap"
                                                 MinHeight="100" MaxHeight="250"
                                                 VerticalScrollBarVisibility="Auto"
                                                 FontSize="12" Padding="8,6"
                                                 BorderBrush="#64B5F6" BorderThickness="1"
                                                 SpellCheck.IsEnabled="True"/>
                                        <Button Grid.Column="1" Content="AI" FontSize="10" FontWeight="Bold"
                                                Padding="6,4" Margin="4,0,0,0" Cursor="Hand"
                                                Background="#8E44AD" Foreground="White" BorderThickness="0"
                                                VerticalAlignment="Top" ToolTip="AI Writing Assist"
                                                Click="AiAssist_FeedCompose_Click"/>
                                    </Grid>
                                    <TextBlock Text="Tags (1-5 comma delimited)" FontSize="11" Foreground="#555" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Feed.NewPostTags, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="12" Padding="8,6" Margin="0,0,0,6"
                                             BorderBrush="#64B5F6" BorderThickness="1"/>
                                    <TextBlock Text="{Binding Feed.PostError}" Foreground="#E74C3C"
                                               FontSize="11" Margin="0,0,0,4" TextWrapping="Wrap"
                                               Visibility="{Binding Feed.PostError, Converter={StaticResource NotNullToVis}}"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Posting..." FontStyle="Italic" Foreground="#3498DB"
                                                   FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                                   Visibility="{Binding Feed.IsPosting, Converter={StaticResource BoolToVis}}"/>
                                        <Button Content="Cancel"
                                                Command="{Binding Feed.CancelComposeCommand}"
                                                FontSize="11" Padding="10,4" Margin="0,0,6,0" Cursor="Hand"/>
                                        <Button Content="Post"
                                                Command="{Binding Feed.CreatePostCommand}"
                                                Background="#2980B9" Foreground="White"
                                                FontSize="11" FontWeight="SemiBold" Padding="16,4"
                                                BorderThickness="0" Cursor="Hand"
                                                IsEnabled="{Binding Feed.IsPosting, Converter={StaticResource InverseBool}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Search and Tag Filter -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,6">
                            <DockPanel>
                                <Button DockPanel.Dock="Right" Content="Search"
                                        Command="{Binding Feed.SearchCommand}"
                                        FontSize="11" Padding="8,4" Margin="4,0,0,0"
                                        Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                <Button DockPanel.Dock="Right" Content="Clear"
                                        Command="{Binding Feed.ClearFiltersCommand}"
                                        FontSize="11" Padding="6,4" Margin="4,0,0,0"
                                        Cursor="Hand"
                                        Visibility="{Binding Feed.IsFiltered, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Text="{Binding Feed.SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="12" Padding="6,4"
                                         BorderBrush="#BDC3C7" BorderThickness="1"
                                         ToolTip="Search posts by title or summary"/>
                            </DockPanel>
                            <!-- Tag chips -->
                            <ItemsControl ItemsSource="{Binding Feed.AvailableTags}" Margin="0,4,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,2" Margin="0,0,4,4" CornerRadius="10"
                                                Cursor="Hand" MouseLeftButtonUp="TagChip_Click">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#ECF0F1"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#D5DBDB"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding}" FontSize="10" Foreground="#2C3E50"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <ListBox Grid.Row="2" ItemsSource="{Binding Feed.Posts}"
                                 SelectedItem="{Binding Feed.SelectedPost}"
                                 ItemTemplate="{StaticResource ActivityCardTemplate}"
                                 BorderThickness="0" Background="Transparent"
                                 HorizontalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="False"
                                 SelectionChanged="FeedList_SelectionChanged"
                                 PreviewMouseLeftButtonUp="FeedList_PreviewMouseLeftButtonUp"/>
                    </Grid>

                    <!-- Splitter -->
                    <GridSplitter Grid.Column="1" Width="4" Background="#DEE2E6"
                                  HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                  Visibility="{Binding Feed.HasDiscussion, Converter={StaticResource BoolToVis}}"/>

                    <!-- Right: Discussion panel (same pattern as Discussions) -->
                    <Grid Grid.Column="2"
                          Visibility="{Binding Feed.HasDiscussion, Converter={StaticResource BoolToVis}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>    <!-- Scrollable content -->
                            <RowDefinition Height="Auto"/> <!-- Reply panel (fixed) -->
                        </Grid.RowDefinitions>

                        <!-- Scrollable: header + body + comments -->
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="4,0,0,0">
                            <StackPanel>
                                <!-- Post header -->
                                <Border Background="#E3F2FD" Padding="10,8" CornerRadius="4"
                                        BorderBrush="#64B5F6" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Feed.DiscussionTitle}" FontWeight="Bold"
                                                       FontSize="13" Foreground="#1565C0" TextWrapping="Wrap"/>
                                            <TextBlock FontSize="10" Foreground="#777" Margin="0,2,0,0">
                                                <Run Text="by "/>
                                                <Run Text="{Binding Feed.DiscussionAuthor, Mode=OneWay}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="Refresh"
                                                Command="{Binding Feed.RefreshFeedDiscussionCommand}"
                                                Background="#3498DB" Foreground="White" Padding="8,3"
                                                FontSize="10" BorderThickness="0" Cursor="Hand" Margin="6,0,0,0"
                                                VerticalAlignment="Top"/>
                                        <!-- Feature 4: Subscribe button -->
                                        <Button Grid.Column="2" Content="Subscribe"
                                                Command="{Binding Feed.SubscribeCommand}"
                                                Background="#27AE60" Foreground="White" Padding="8,3"
                                                FontSize="10" BorderThickness="0" Cursor="Hand" Margin="4,0,0,0"
                                                VerticalAlignment="Top" ToolTip="Subscribe to this post (add to Discussions)"/>
                                        <Button Grid.Column="3" Content="X"
                                                Click="CloseFeedDiscussion_Click"
                                                Background="#E74C3C" Foreground="White" Padding="6,2"
                                                FontSize="10" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                                Margin="4,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>

                                <!-- Post body -->
                                <Border Background="#FAFAFA" Padding="10,8" Margin="0,4,0,0"
                                        BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4"
                                        MouseLeftButtonUp="FeedPostBody_MouseLeftButtonUp" Cursor="Hand">
                                    <RichTextBox helpers:MarkdownHelper.MarkdownText="{Binding Feed.DiscussionBody, Mode=OneWay}"
                                                 IsReadOnly="True" IsDocumentEnabled="True"
                                                 BorderThickness="0" Background="Transparent" Padding="0"
                                                 FontSize="12" Foreground="#333" Cursor="IBeam"
                                                 Focusable="True" VerticalScrollBarVisibility="Disabled"
                                                 IsHitTestVisible="{Binding Feed.IsPostBodyExpanded}">
                                        <RichTextBox.Style>
                                            <Style TargetType="RichTextBox">
                                                <Setter Property="MaxHeight" Value="120"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Feed.IsPostBodyExpanded}" Value="True">
                                                        <Setter Property="MaxHeight" Value="{x:Static system:Double.PositiveInfinity}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </RichTextBox.Style>
                                    </RichTextBox>
                                </Border>

                                <!-- Comments list -->
                                <ItemsControl ItemsSource="{Binding Feed.DiscussionComments}"
                                              ItemTemplate="{StaticResource DiscussionCommentTemplate}"
                                              Margin="0,4,0,0"/>
                            </StackPanel>
                        </ScrollViewer>

                        <TextBlock Grid.Row="0" Text="Loading discussion..."
                                   FontStyle="Italic" Foreground="#3498DB" FontSize="12"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding Feed.IsLoadingDiscussion, Converter={StaticResource BoolToVis}}"/>

                        <!-- Reply panel -->
                        <Border Grid.Row="1" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0"
                                Padding="4,8,0,0" Margin="4,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#E3F2FD" Padding="6,4" CornerRadius="3"
                                        Margin="0,0,0,4"
                                        Visibility="{Binding Feed.ReplyToComment, Converter={StaticResource NotNullToVis}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="10" Foreground="#1565C0" VerticalAlignment="Center">
                                            <Run Text="Replying to "/>
                                            <Run Text="{Binding Feed.ReplyToComment.Author, Mode=OneWay}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <Button Content="X" Click="CancelFeedReplyTo_Click"
                                                FontSize="9" Padding="4,1" Margin="8,0,0,0"
                                                Background="Transparent" Foreground="#E74C3C"
                                                BorderBrush="#E74C3C" BorderThickness="1"
                                                Cursor="Hand" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding Feed.DiscussionReplyText, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             FontSize="12" Padding="8,6"
                                             BorderBrush="#64B5F6" BorderThickness="1"
                                             SpellCheck.IsEnabled="True"
                                             GotFocus="FeedReplyTextBox_GotFocus"
                                             LostFocus="FeedReplyTextBox_LostFocus">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="MinHeight" Value="36"/>
                                                <Setter Property="MaxHeight" Value="60"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Feed.IsReplyExpanded}" Value="True">
                                                        <Setter Property="MinHeight" Value="100"/>
                                                        <Setter Property="MaxHeight" Value="200"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <Button Grid.Column="1" Content="AI" FontSize="10" FontWeight="Bold"
                                            Padding="6,4" Margin="4,0,0,0" Cursor="Hand"
                                            Background="#8E44AD" Foreground="White" BorderThickness="0"
                                            VerticalAlignment="Top" ToolTip="AI Writing Assist"
                                            Click="AiAssist_FeedReply_Click"/>
                                </Grid>

                                <StackPanel Grid.Row="2" Orientation="Horizontal"
                                            HorizontalAlignment="Right" Margin="0,6,0,0">
                                    <TextBlock Text="{Binding Feed.DiscussionReplyText, Converter={StaticResource CharCount}}"
                                               Foreground="{Binding Feed.DiscussionReplyText, Converter={StaticResource CharCountBrush}}"
                                               FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Feed.DiscussionSendError}" Foreground="#E74C3C"
                                               FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                               TextWrapping="Wrap" MaxWidth="300"
                                               Visibility="{Binding Feed.DiscussionSendError, Converter={StaticResource NotNullToVis}}"/>
                                    <TextBlock Text="Sending..." FontStyle="Italic" Foreground="#3498DB"
                                               FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                               Visibility="{Binding Feed.IsSendingDiscussionReply, Converter={StaticResource BoolToVis}}"/>
                                    <Button Command="{Binding Feed.SendFeedReplyCommand}"
                                            Background="#3498DB" Foreground="White" Padding="16,6"
                                            FontWeight="SemiBold" FontSize="12" BorderThickness="0" Cursor="Hand"
                                            IsEnabled="{Binding Feed.IsSendingDiscussionReply, Converter={StaticResource InverseBool}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Content" Value="Reply"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Feed.ReplyToComment, Converter={StaticResource NotNullToVis}}" Value="Visible">
                                                        <Setter Property="Content" Value="Reply to Thread"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Placeholder when no discussion is selected -->
                    <Border Grid.Column="2" Margin="4,0,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Feed.HasDiscussion}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="Click a post to see its discussion"
                                   FontSize="12" Foreground="#999" FontStyle="Italic"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextWrapping="Wrap" TextAlignment="Center" Padding="20"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- ═══ Channels Tab (Feature 8: threaded messages) ═══ -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Channels" FontSize="13" Padding="8,4"/>
                        <Border Background="#E74C3C" CornerRadius="8" Padding="5,1" Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Visibility="{Binding Channels.NewCount, Converter={StaticResource NotZeroToVis}}">
                            <TextBlock Text="{Binding Channels.NewCount}" Foreground="White" FontSize="10"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Channel list + create button -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Show All Channels toggle -->
                        <CheckBox Grid.Row="0" Content="Show All Channels"
                                  IsChecked="{Binding Channels.ShowAllChannels}"
                                  FontSize="11" Foreground="#555" Margin="0,0,8,6"
                                  ToolTip="When off, only shows channels you're subscribed to"/>

                        <ListBox Grid.Row="1" ItemsSource="{Binding Channels.Channels}"
                                 SelectedItem="{Binding Channels.SelectedChannel}"
                                 BorderThickness="0,0,1,0" BorderBrush="#DEE2E6"
                                 Background="Transparent" Margin="0,0,8,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="4,4">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="#" Foreground="#9C27B0" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="SemiBold" Foreground="#333"/>
                                            <Border Background="#CE93D8" CornerRadius="6" Padding="4,0" Margin="6,0,0,0"
                                                    Visibility="{Binding NewMessageCount, Converter={StaticResource NotZeroToVis}}">
                                                <TextBlock Text="{Binding NewMessageCount}" Foreground="White" FontSize="9"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Role}" FontSize="10" Foreground="#999"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Create channel button -->
                        <Button Grid.Row="2" Content="＋ New Channel"
                                Command="{Binding Channels.ShowCreateChannelCommand}"
                                Background="#9C27B0" Foreground="White" Padding="8,5"
                                FontSize="11" FontWeight="SemiBold" BorderThickness="0"
                                Cursor="Hand" Margin="0,4,8,0" HorizontalAlignment="Stretch">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Channels.IsCreatingChannel}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Create channel form -->
                        <Border Grid.Row="3" Background="#F3E5F5" Padding="6" CornerRadius="4"
                                Margin="0,4,8,0" BorderBrush="#CE93D8" BorderThickness="1"
                                Visibility="{Binding Channels.IsCreatingChannel, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="Create Channel" FontSize="11" FontWeight="SemiBold"
                                           Foreground="#9C27B0" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Channels.NewChannelName, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="11" Padding="4,3" Margin="0,0,0,4"
                                         BorderBrush="#CE93D8" BorderThickness="1">
                                    <TextBox.Tag>Name</TextBox.Tag>
                                </TextBox>
                                <TextBox Text="{Binding Channels.NewChannelDescription, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="11" Padding="4,3" Margin="0,0,0,4"
                                         AcceptsReturn="True" TextWrapping="Wrap"
                                         MinHeight="40" MaxHeight="60"
                                         BorderBrush="#CE93D8" BorderThickness="1">
                                    <TextBox.Tag>Description (optional)</TextBox.Tag>
                                </TextBox>
                                <TextBlock Text="{Binding Channels.CreateError}" Foreground="#E74C3C"
                                           FontSize="10" Margin="0,0,0,4" TextWrapping="Wrap"
                                           Visibility="{Binding Channels.CreateError, Converter={StaticResource NotNullToVis}}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Cancel"
                                            Command="{Binding Channels.CancelCreateChannelCommand}"
                                            FontSize="10" Padding="8,3" Margin="0,0,4,0" Cursor="Hand"/>
                                    <Button Content="Create"
                                            Command="{Binding Channels.CreateChannelCommand}"
                                            Background="#9C27B0" Foreground="White"
                                            FontSize="10" FontWeight="SemiBold" Padding="8,3"
                                            BorderThickness="0" Cursor="Hand"
                                            IsEnabled="{Binding Channels.IsCreating, Converter={StaticResource InverseBool}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Channel messages (Feature 8: threaded view) + reply -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Channel header with subscribe/unsubscribe -->
                        <Border Grid.Row="0" Background="#F3E5F5" Padding="8,6" CornerRadius="4"
                                Margin="0,0,0,4"
                                Visibility="{Binding Channels.SelectedChannel, Converter={StaticResource NotNullToVis}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#9C27B0">
                                        <Run Text="#"/>
                                        <Run Text="{Binding Channels.SelectedChannel.Name, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Channels.SelectedChannel.Description}"
                                               FontSize="10" Foreground="#777" TextWrapping="Wrap"
                                               MaxHeight="30" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Members" Command="{Binding Channels.ToggleChannelDetailCommand}"
                                            Background="#7E57C2" Foreground="White" Padding="8,4" Margin="0,0,4,0"
                                            FontSize="10" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                            ToolTip="Show/hide channel members"/>
                                    <Button Content="Invite" Click="ChannelInvite_Click"
                                            Background="#F39C12" Foreground="White" Padding="8,4" Margin="0,0,4,0"
                                            FontSize="10" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                            ToolTip="Invite an agent to this channel"/>
                                    <Button x:Name="ChannelSubscribeBtn"
                                            Click="ChannelSubscribe_Click"
                                            Padding="10,4" FontSize="11" FontWeight="SemiBold"
                                            BorderThickness="0" Cursor="Hand"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Invite form (collapsible) -->
                        <Border Grid.Row="1" Background="#FFF8E1" Padding="8,6" CornerRadius="4"
                                Margin="0,0,0,4" BorderBrush="#F39C12" BorderThickness="1"
                                Visibility="{Binding Channels.ShowInviteForm, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="Invite Agent to Channel" FontSize="11" FontWeight="SemiBold"
                                           Foreground="#F39C12" Margin="0,0,0,4"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBox Text="{Binding Channels.InviteAgentName, UpdateSourceTrigger=PropertyChanged}"
                                             Width="180" FontSize="11" Padding="4,3"
                                             BorderBrush="#F39C12" BorderThickness="1">
                                        <TextBox.Tag>Agent name</TextBox.Tag>
                                    </TextBox>
                                    <Button Content="Invite" Command="{Binding Channels.InviteAgentCommand}"
                                            Background="#F39C12" Foreground="White" Padding="10,3" Margin="6,0,0,0"
                                            FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                            IsEnabled="{Binding Channels.IsInviting, Converter={StaticResource InverseBool}}"/>
                                    <Button Content="Cancel" Command="{Binding Channels.CancelInviteCommand}"
                                            FontSize="10" Padding="8,3" Margin="6,0,0,0" Cursor="Hand"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Channels.InviteError}" Foreground="#E74C3C"
                                           FontSize="10" TextWrapping="Wrap"
                                           Visibility="{Binding Channels.InviteError, Converter={StaticResource NotNullToVis}}"/>
                                <TextBlock Text="{Binding Channels.InviteSuccess}" Foreground="#27AE60"
                                           FontSize="10"
                                           Visibility="{Binding Channels.InviteSuccess, Converter={StaticResource NotNullToVis}}"/>
                            </StackPanel>
                        </Border>

                        <!-- Channel member list (collapsible) -->
                        <Border Grid.Row="2" Background="#EDE7F6" Padding="8,6" CornerRadius="4"
                                Margin="0,0,0,4" BorderBrush="#B39DDB" BorderThickness="1"
                                Visibility="{Binding Channels.ShowChannelDetail, Converter={StaticResource BoolToVis}}"
                                MaxHeight="150">
                            <StackPanel>
                                <TextBlock Text="Channel Members" FontSize="11" FontWeight="SemiBold"
                                           Foreground="#7E57C2" Margin="0,0,0,4"/>
                                <TextBlock Text="Loading..." FontStyle="Italic" Foreground="#999" FontSize="10"
                                           Visibility="{Binding Channels.IsLoadingDetail, Converter={StaticResource BoolToVis}}"/>
                                <ItemsControl ItemsSource="{Binding Channels.ChannelMembers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock FontSize="11" Margin="0,1">
                                                <Run Text="{Binding AgentName, Mode=OneWay}" FontWeight="SemiBold" Foreground="#333"/>
                                                <Run Text=" " Foreground="#999"/>
                                                <Run Text="{Binding Role, Mode=OneWay}" FontSize="9" Foreground="#7E57C2"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Threaded messages -->
                        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto"
                                      x:Name="ChannelMessagesScrollViewer">
                            <ItemsControl ItemsSource="{Binding Channels.SelectedChannel.ThreadedMessages}"
                                          ItemTemplate="{StaticResource DiscussionCommentTemplate}"/>
                        </ScrollViewer>

                        <!-- Reply panel -->
                        <Border Grid.Row="4" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" Padding="0,8,0,0"
                                Visibility="{Binding Channels.SelectedChannel, Converter={StaticResource NotNullToVis}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/> <!-- Reply-to indicator -->
                                    <RowDefinition Height="Auto"/> <!-- TextBox + AI button -->
                                    <RowDefinition Height="Auto"/> <!-- Buttons -->
                                </Grid.RowDefinitions>

                                <!-- Reply-to indicator (Feature 8) -->
                                <Border Grid.Row="0" Background="#F3E5F5" Padding="6,4" CornerRadius="3"
                                        Margin="0,0,0,4"
                                        Visibility="{Binding Channels.ReplyToMessage, Converter={StaticResource NotNullToVis}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="10" Foreground="#9C27B0" VerticalAlignment="Center">
                                            <Run Text="Replying to "/>
                                            <Run Text="{Binding Channels.ReplyToMessage.Author, Mode=OneWay}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <Button Content="X" Click="CancelChannelReplyTo_Click"
                                                FontSize="9" Padding="4,1" Margin="8,0,0,0"
                                                Background="Transparent" Foreground="#E74C3C"
                                                BorderBrush="#E74C3C" BorderThickness="1"
                                                Cursor="Hand" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding Channels.ReplyText, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             MinHeight="50" MaxHeight="100"
                                             VerticalScrollBarVisibility="Auto"
                                             FontSize="12" Padding="8,6"
                                             BorderBrush="#CE93D8" BorderThickness="1"
                                             SpellCheck.IsEnabled="True"/>
                                    <Button Grid.Column="1" Content="AI" FontSize="10" FontWeight="Bold"
                                            Padding="6,4" Margin="4,0,0,0" Cursor="Hand"
                                            Background="#8E44AD" Foreground="White" BorderThickness="0"
                                            VerticalAlignment="Top" ToolTip="AI Writing Assist"
                                            Click="AiAssist_Channel_Click"/>
                                </Grid>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                                    <TextBlock Text="{Binding Channels.ReplyText, Converter={StaticResource CharCount}, ConverterParameter=5000}"
                                               Foreground="{Binding Channels.ReplyText, Converter={StaticResource CharCountBrush}, ConverterParameter=5000}"
                                               FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Channels.SendError}" Foreground="#E74C3C"
                                               FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                               TextWrapping="Wrap" MaxWidth="300"
                                               Visibility="{Binding Channels.SendError, Converter={StaticResource NotNullToVis}}"/>
                                    <TextBlock Text="Sending..." FontStyle="Italic" Foreground="#3498DB"
                                               FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                               Visibility="{Binding Channels.IsSending, Converter={StaticResource BoolToVis}}"/>
                                    <Button Content="Send" Command="{Binding Channels.SendMessageCommand}"
                                            Background="#9C27B0" Foreground="White" Padding="16,6"
                                            FontWeight="SemiBold" FontSize="12" BorderThickness="0" Cursor="Hand"
                                            IsEnabled="{Binding Channels.IsSending, Converter={StaticResource InverseBool}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ═══ Agents Tab ═══ -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Agents" FontSize="13" Padding="8,4"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Status / refresh bar -->
                    <Border Grid.Row="0" Background="#ECF0F1" Padding="8,6" CornerRadius="4" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Agents.StatusText}"
                                       FontSize="11" Foreground="#555" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal"
                                        Visibility="{Binding Agents.SelectedAgent, Converter={StaticResource NotNullToVis}}">
                                <Button Content="Tip" Command="{Binding Agents.ShowTipCommand}"
                                        Background="#F39C12" Foreground="White" Padding="12,4" Margin="0,0,6,0"
                                        FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                        ToolTip="Send a BCH tip to this agent">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Agents.ShowTipForm}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Start Discussion"
                                        Command="{Binding Agents.StartDiscussionCommand}"
                                        Background="#27AE60" Foreground="White" Padding="12,4" Margin="0,0,6,0"
                                        FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Agents.IsComposing}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Reviews" Command="{Binding Agents.ToggleReviewsCommand}"
                                        Background="#9C27B0" Foreground="White" Padding="12,4" Margin="0,0,6,0"
                                        FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                        ToolTip="Browse and submit skill reviews"/>
                                <Button Content="Refresh"
                                        Click="AgentsRefresh_Click"
                                        Background="#3498DB" Foreground="White" Padding="12,4"
                                        FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                        IsEnabled="{Binding Agents.IsLoading, Converter={StaticResource InverseBool}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Reviews panel (collapsible) -->
                    <Border Grid.Row="1" Background="#F3E5F5" Padding="10,8" CornerRadius="4"
                            Margin="0,0,0,8" BorderBrush="#CE93D8" BorderThickness="1"
                            Visibility="{Binding Agents.ShowReviews, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*" MaxHeight="350"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#9C27B0">
                                        <Run Text="Skill Reviews"/>
                                        <Run Text="{Binding Agents.ReviewsStatus, Mode=OneWay}" FontWeight="Normal"
                                             Foreground="#777" FontSize="10"/>
                                    </TextBlock>
                                    <TextBlock Text="Reviews are for skills (not agents) — showing all platform reviews"
                                               FontSize="9" Foreground="#999" FontStyle="Italic"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Write Review"
                                        Command="{Binding Agents.OpenReviewFormCommand}"
                                        Background="#9C27B0" Foreground="White" Padding="8,2"
                                        FontSize="10" BorderThickness="0" Cursor="Hand"/>
                            </Grid>

                            <!-- Submit review form (collapsible) -->
                            <Border Grid.Row="1" Background="White" Padding="8,6" CornerRadius="3"
                                    Margin="0,0,0,6" BorderBrush="#CE93D8" BorderThickness="1"
                                    Visibility="{Binding Agents.ShowReviewForm, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Skill ID: " FontSize="11" Foreground="#555"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="{Binding Agents.ReviewSkillId, UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="11" Padding="4,3" BorderBrush="#CE93D8" BorderThickness="1"
                                                 ToolTip="e.g. author/skill-name"/>
                                        <TextBlock Grid.Column="2" Text=" Score: " FontSize="11" Foreground="#555"
                                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                                        <TextBox Grid.Column="3" Text="{Binding Agents.ReviewScore, UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="11" Padding="4,3" BorderBrush="#CE93D8" BorderThickness="1"
                                                 ToolTip="1-10"/>
                                    </Grid>
                                    <TextBlock Text="Task Description:" FontSize="10" Foreground="#777"/>
                                    <TextBox Text="{Binding Agents.ReviewTask, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="11" Padding="4,3" Margin="0,2,0,4"
                                             AcceptsReturn="True" TextWrapping="Wrap" MinHeight="30" MaxHeight="50"
                                             BorderBrush="#CE93D8" BorderThickness="1"/>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                            <TextBlock Text="What Worked:" FontSize="10" Foreground="#777"/>
                                            <TextBox Text="{Binding Agents.ReviewWhatWorked, UpdateSourceTrigger=PropertyChanged}"
                                                     FontSize="11" Padding="4,3" Margin="0,2,0,0"
                                                     AcceptsReturn="True" TextWrapping="Wrap" MaxHeight="40"
                                                     BorderBrush="#CE93D8" BorderThickness="1"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                            <TextBlock Text="What Failed:" FontSize="10" Foreground="#777"/>
                                            <TextBox Text="{Binding Agents.ReviewWhatFailed, UpdateSourceTrigger=PropertyChanged}"
                                                     FontSize="11" Padding="4,3" Margin="0,2,0,0"
                                                     AcceptsReturn="True" TextWrapping="Wrap" MaxHeight="40"
                                                     BorderBrush="#CE93D8" BorderThickness="1"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Submit Review" Command="{Binding Agents.SubmitReviewCommand}"
                                                Background="#9C27B0" Foreground="White" Padding="10,3"
                                                FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                                IsEnabled="{Binding Agents.IsSubmittingReview, Converter={StaticResource InverseBool}}"/>
                                        <Button Content="Cancel" Command="{Binding Agents.CancelReviewCommand}"
                                                FontSize="10" Padding="8,3" Margin="6,0,0,0" Cursor="Hand"/>
                                        <TextBlock Text="{Binding Agents.ReviewError}" Foreground="#E74C3C"
                                                   FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0"
                                                   Visibility="{Binding Agents.ReviewError, Converter={StaticResource NotNullToVis}}"/>
                                        <TextBlock Text="{Binding Agents.ReviewSuccess}" Foreground="#27AE60"
                                                   FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0"
                                                   Visibility="{Binding Agents.ReviewSuccess, Converter={StaticResource NotNullToVis}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Loading indicator -->
                            <TextBlock Grid.Row="2" Text="Loading reviews..."
                                       FontStyle="Italic" Foreground="#9C27B0" FontSize="11"
                                       Visibility="{Binding Agents.IsLoadingReviews, Converter={StaticResource BoolToVis}}"
                                       Margin="0,0,0,4"/>

                            <!-- Reviews list -->
                            <ListBox Grid.Row="3" ItemsSource="{Binding Agents.AgentReviews}"
                                     BorderThickness="0" Background="Transparent"
                                     HorizontalContentAlignment="Stretch"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,3" Padding="8,6" CornerRadius="3"
                                                Background="White" BorderBrush="#E1BEE7" BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#2C3E50"
                                                               TextTrimming="CharacterEllipsis">
                                                        <Run Text="{Binding SkillName, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Task}" FontSize="10" Foreground="#777"
                                                               TextWrapping="Wrap" MaxHeight="30"
                                                               TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                                    <TextBlock FontSize="10" Foreground="#999" Margin="0,2,0,0">
                                                        <Run Text="{Binding Status, Mode=OneWay}"/>
                                                        <Run Text=" | "/>
                                                        <Run Text="{Binding Created, Mode=OneWay}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0,0,0">
                                                    <TextBlock FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                                               Foreground="#9C27B0">
                                                        <Run Text="{Binding Score, Mode=OneWay}"/><Run Text="/10" FontSize="10" FontWeight="Normal"/>
                                                    </TextBlock>
                                                    <TextBlock Text="Verified" FontSize="9" Foreground="#27AE60"
                                                               HorizontalAlignment="Center"
                                                               Visibility="{Binding VerifiedReviewer, Converter={StaticResource BoolToVis}}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- Split panel: agent list on left, agent posts on right -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="300"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Agent table -->
                        <ListView Grid.Column="0" ItemsSource="{Binding Agents.Agents}"
                                  SelectedItem="{Binding Agents.SelectedAgent}"
                                  BorderThickness="1" BorderBrush="#DEE2E6"
                                  Background="White" FontSize="12">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="150">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="AgentSort_Click" Tag="Name"
                                                                  Content="Name" FontWeight="SemiBold"
                                                                  HorizontalContentAlignment="Left" Cursor="Hand"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"
                                                           FontWeight="SemiBold" Foreground="#2C3E50"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="55">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="AgentSort_Click" Tag="PostCount"
                                                                  Content="Posts" FontWeight="SemiBold"
                                                                  HorizontalContentAlignment="Center" Cursor="Hand"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding PostCount}" TextAlignment="Center"
                                                           HorizontalAlignment="Center" Foreground="#555"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="60">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="AgentSort_Click" Tag="Verified"
                                                                  Content="Verified" FontWeight="SemiBold"
                                                                  HorizontalContentAlignment="Center" Cursor="Hand"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value=""/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Verified}" Value="True">
                                                                    <Setter Property="Text" Value="Yes"/>
                                                                    <Setter Property="Foreground" Value="#27AE60"/>
                                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" Width="4" Background="#DEE2E6"
                                      HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                      Visibility="{Binding Agents.HasAgentPosts, Converter={StaticResource BoolToVis}}"/>

                        <!-- Right: Agent posts + compose -->
                        <Grid Grid.Column="2"
                              Visibility="{Binding Agents.HasAgentPosts, Converter={StaticResource BoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Agent info header -->
                            <Border Grid.Row="0" Background="#E8F5E9" Padding="10,8" CornerRadius="4"
                                    Margin="4,0,0,4" BorderBrush="#A5D6A7" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#2E7D32">
                                        <Run Text="{Binding Agents.SelectedAgent.Name, Mode=OneWay}"/>
                                        <Run Text=" " FontSize="10" Foreground="#777"/>
                                        <Run Text="{Binding Agents.SelectedAgent.PostCount, Mode=OneWay, StringFormat='{}{0} posts'}"
                                             FontSize="10" Foreground="#777" FontWeight="Normal"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Agents.SelectedAgent.Description}"
                                               FontSize="11" Foreground="#555" TextWrapping="Wrap"
                                               MaxHeight="36" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Tip form (collapsible) -->
                            <Border Grid.Row="1" Background="#FFF8E1" Padding="8,6" CornerRadius="4"
                                    Margin="4,0,0,4" BorderBrush="#F39C12" BorderThickness="1"
                                    Visibility="{Binding Agents.ShowTipForm, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Agents.TipTargetLabel}" FontSize="11"
                                               FontWeight="SemiBold" Foreground="#F39C12" Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="Amount (BCH): " FontSize="11" Foreground="#555"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding Agents.TipAmount, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="100" FontSize="11" Padding="4,3"
                                                 BorderBrush="#F39C12" BorderThickness="1"/>
                                        <TextBlock Text="{Binding Agents.TipUsdEstimate}" FontSize="11"
                                                   Foreground="#F39C12" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </StackPanel>
                                    <TextBox Text="{Binding Agents.TipMessage, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="11" Padding="4,3" Margin="0,0,0,4"
                                             BorderBrush="#F39C12" BorderThickness="1">
                                        <TextBox.Tag>Message (optional)</TextBox.Tag>
                                    </TextBox>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Send Tip" Command="{Binding Agents.SendTipCommand}"
                                                Background="#F39C12" Foreground="White" Padding="10,3"
                                                FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                                IsEnabled="{Binding Agents.IsTipping, Converter={StaticResource InverseBool}}"/>
                                        <Button Content="Cancel" Command="{Binding Agents.CancelTipCommand}"
                                                FontSize="10" Padding="8,3" Margin="6,0,0,0" Cursor="Hand"/>
                                        <TextBlock Text="{Binding Agents.TipError}" Foreground="#E74C3C"
                                                   FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0"
                                                   Visibility="{Binding Agents.TipError, Converter={StaticResource NotNullToVis}}"/>
                                        <TextBlock Text="{Binding Agents.TipSuccess}" Foreground="#27AE60"
                                                   FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0"
                                                   Visibility="{Binding Agents.TipSuccess, Converter={StaticResource NotNullToVis}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Posts status -->
                            <TextBlock Grid.Row="2" Text="{Binding Agents.AgentPostsStatus}"
                                       FontSize="10" Foreground="#777" Margin="8,0,0,4"/>

                            <!-- Agent's posts list -->
                            <ListBox Grid.Row="3" ItemsSource="{Binding Agents.AgentPosts}"
                                     BorderThickness="0" Background="Transparent"
                                     HorizontalContentAlignment="Stretch"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     Margin="4,0,0,0"
                                     SelectionChanged="AgentPostList_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,3" Padding="8,6" CornerRadius="4"
                                                Background="White" BorderBrush="#DEE2E6" BorderThickness="1"
                                                Cursor="Hand">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="#2C3E50" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Summary}" FontSize="10" Foreground="#777"
                                                           TextWrapping="Wrap" MaxHeight="30"
                                                           TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock FontSize="10" Foreground="#999">
                                                        <Run Text="Score: "/><Run Text="{Binding Score, Mode=OneWay}"/>
                                                        <Run Text=" | Comments: "/><Run Text="{Binding CommentCount, Mode=OneWay}"/>
                                                        <Run Text=" | "/><Run Text="{Binding Timestamp, Mode=OneWay, Converter={StaticResource TimeAgo}}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Loading indicator -->
                            <TextBlock Grid.Row="3" Text="Loading posts..."
                                       FontStyle="Italic" Foreground="#3498DB" FontSize="12"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding Agents.IsLoadingPosts, Converter={StaticResource BoolToVis}}"/>

                            <!-- Start Discussion compose form -->
                            <Border Grid.Row="4" Background="#E3F2FD" Padding="10,8" CornerRadius="4"
                                    Margin="4,6,0,0" BorderBrush="#64B5F6" BorderThickness="1"
                                    Visibility="{Binding Agents.IsComposing, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <TextBlock Text="Start a Discussion" FontSize="12" FontWeight="SemiBold"
                                               Foreground="#1565C0" Margin="0,0,0,6"/>
                                    <TextBlock Text="Title" FontSize="10" Foreground="#777" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Agents.NewPostTitle, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="12" Padding="6,4" Margin="0,0,0,6"
                                             BorderBrush="#64B5F6" BorderThickness="1"/>
                                    <TextBlock Text="Body" FontSize="10" Foreground="#777" Margin="0,0,0,2"/>
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Text="{Binding Agents.NewPostBody, UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="12" Padding="6,4"
                                                 AcceptsReturn="True" TextWrapping="Wrap"
                                                 MinHeight="60" MaxHeight="120"
                                                 VerticalScrollBarVisibility="Auto"
                                                 SpellCheck.IsEnabled="True"
                                                 BorderBrush="#64B5F6" BorderThickness="1"/>
                                        <Button Grid.Column="1" Content="AI" FontSize="10" FontWeight="Bold"
                                                Padding="6,4" Margin="4,0,0,0" Cursor="Hand"
                                                Background="#8E44AD" Foreground="White" BorderThickness="0"
                                                VerticalAlignment="Top" ToolTip="AI Writing Assist"
                                                Click="AiAssist_AgentDiscussion_Click"/>
                                    </Grid>
                                    <TextBlock Text="Tags" FontSize="10" Foreground="#777" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Agents.NewPostTags, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="11" Padding="6,4" Margin="0,0,0,6"
                                             BorderBrush="#64B5F6" BorderThickness="1"
                                             ToolTip="Comma-separated tags (at least one required)"/>
                                    <TextBlock Text="{Binding Agents.PostError}" Foreground="#E74C3C"
                                               FontSize="10" Margin="0,0,0,4" TextWrapping="Wrap"
                                               Visibility="{Binding Agents.PostError, Converter={StaticResource NotNullToVis}}"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Creating post..." FontStyle="Italic" Foreground="#3498DB"
                                                   FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                                   Visibility="{Binding Agents.IsPosting, Converter={StaticResource BoolToVis}}"/>
                                        <Button Content="Cancel"
                                                Command="{Binding Agents.CancelComposeCommand}"
                                                FontSize="11" Padding="10,4" Margin="0,0,6,0" Cursor="Hand"/>
                                        <Button Content="Create Post"
                                                Command="{Binding Agents.CreatePostCommand}"
                                                Background="#27AE60" Foreground="White"
                                                FontSize="11" FontWeight="SemiBold" Padding="12,4"
                                                BorderThickness="0" Cursor="Hand"
                                                IsEnabled="{Binding Agents.IsPosting, Converter={StaticResource InverseBool}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Placeholder when no agent is selected -->
                        <Border Grid.Column="2" Margin="4,0,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Agents.HasAgentPosts}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="Click an agent to see their posts"
                                       FontSize="12" Foreground="#999" FontStyle="Italic"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap" TextAlignment="Center" Padding="20"/>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- What's New Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="What's New" FontSize="13" Padding="8,4"/>
                        <Border Background="#E74C3C" CornerRadius="8" Padding="5,1" Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Visibility="{Binding WhatsNew.NewCount, Converter={StaticResource NotZeroToVis}}">
                            <TextBlock Text="{Binding WhatsNew.NewCount}" Foreground="White" FontSize="10"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Status / refresh bar -->
                    <Border Grid.Row="0" Background="#ECF0F1" Padding="8,6" CornerRadius="4" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding WhatsNew.StatusText}"
                                       FontSize="11" Foreground="#555" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Check Now"
                                    Command="{Binding WhatsNew.CheckForNewsCommand}"
                                    Background="#3498DB" Foreground="White" Padding="12,4"
                                    FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                    IsEnabled="{Binding WhatsNew.IsChecking, Converter={StaticResource InverseBool}}"/>
                        </Grid>
                    </Border>

                    <!-- Split panel: entries on left, discussion on right -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="250"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" MinWidth="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Entries list (pixel-based scrolling for tall items) -->
                        <ListBox Grid.Column="0" ItemsSource="{Binding WhatsNew.Entries}"
                                 SelectedItem="{Binding WhatsNew.SelectedEntry}"
                                 ItemTemplate="{StaticResource WhatsNewCardTemplate}"
                                 BorderThickness="0" Background="Transparent"
                                 HorizontalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="False"
                                 SelectionChanged="WhatsNewList_SelectionChanged"/>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" Width="4" Background="#DEE2E6"
                                      HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                      Visibility="{Binding WhatsNew.HasDiscussion, Converter={StaticResource BoolToVis}}"/>

                        <!-- Right: Discussion panel -->
                        <Grid Grid.Column="2"
                              Visibility="{Binding WhatsNew.HasDiscussion, Converter={StaticResource BoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>    <!-- Scrollable content -->
                                <RowDefinition Height="Auto"/> <!-- Reply panel (fixed) -->
                            </Grid.RowDefinitions>

                            <!-- Scrollable: header + body + comments -->
                            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="4,0,0,0">
                                <StackPanel>
                                    <!-- Post header -->
                                    <Border Background="#E3F2FD" Padding="10,8" CornerRadius="4"
                                            BorderBrush="#64B5F6" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding WhatsNew.DiscussionTitle}" FontWeight="Bold"
                                                           FontSize="13" Foreground="#1565C0" TextWrapping="Wrap"/>
                                                <TextBlock FontSize="10" Foreground="#777" Margin="0,2,0,0">
                                                    <Run Text="by "/>
                                                    <Run Text="{Binding WhatsNew.DiscussionAuthor, Mode=OneWay}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="Refresh"
                                                    Command="{Binding WhatsNew.RefreshDiscussionCommand}"
                                                    Background="#3498DB" Foreground="White" Padding="8,3"
                                                    FontSize="10" BorderThickness="0" Cursor="Hand" Margin="6,0,0,0"
                                                    VerticalAlignment="Top"/>
                                            <Button Grid.Column="2" Content="X"
                                                    Click="CloseDiscussion_Click"
                                                    Background="#E74C3C" Foreground="White" Padding="6,2"
                                                    FontSize="10" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                                    Margin="4,0,0,0" VerticalAlignment="Top"
                                                    ToolTip="Close discussion panel"/>
                                        </Grid>
                                    </Border>

                                    <!-- Post body -->
                                    <Border Background="#FAFAFA" Padding="10,8" Margin="0,4,0,0"
                                            BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4"
                                            MouseLeftButtonUp="PostBody_MouseLeftButtonUp" Cursor="Hand">
                                        <RichTextBox helpers:MarkdownHelper.MarkdownText="{Binding WhatsNew.DiscussionBody, Mode=OneWay}"
                                                     IsReadOnly="True" IsDocumentEnabled="True"
                                                     BorderThickness="0" Background="Transparent" Padding="0"
                                                     FontSize="12" Foreground="#333" Cursor="IBeam"
                                                     Focusable="True" VerticalScrollBarVisibility="Disabled"
                                                     IsHitTestVisible="{Binding WhatsNew.IsPostBodyExpanded}">
                                            <RichTextBox.Style>
                                                <Style TargetType="RichTextBox">
                                                    <Setter Property="MaxHeight" Value="120"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding WhatsNew.IsPostBodyExpanded}" Value="True">
                                                            <Setter Property="MaxHeight" Value="{x:Static system:Double.PositiveInfinity}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </RichTextBox.Style>
                                        </RichTextBox>
                                    </Border>

                                    <!-- Comments list -->
                                    <ItemsControl ItemsSource="{Binding WhatsNew.DiscussionComments}"
                                                  ItemTemplate="{StaticResource DiscussionCommentTemplate}"
                                                  Margin="0,4,0,0"/>
                                </StackPanel>
                            </ScrollViewer>

                            <TextBlock Grid.Row="0" Text="Loading discussion..."
                                       FontStyle="Italic" Foreground="#3498DB" FontSize="12"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding WhatsNew.IsLoadingDiscussion, Converter={StaticResource BoolToVis}}"/>

                            <!-- Reply panel -->
                            <Border Grid.Row="1" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0"
                                    Padding="4,8,0,0" Margin="4,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Replying-to indicator -->
                                    <Border Grid.Row="0" Background="#E3F2FD" Padding="6,4" CornerRadius="3"
                                            Margin="0,0,0,4"
                                            Visibility="{Binding WhatsNew.ReplyToComment, Converter={StaticResource NotNullToVis}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="10" Foreground="#1565C0" VerticalAlignment="Center">
                                                <Run Text="Replying to "/>
                                                <Run Text="{Binding WhatsNew.ReplyToComment.Author, Mode=OneWay}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                            <Button Content="X" Click="CancelReplyTo_Click"
                                                    FontSize="9" Padding="4,1" Margin="8,0,0,0"
                                                    Background="Transparent" Foreground="#E74C3C"
                                                    BorderBrush="#E74C3C" BorderThickness="1"
                                                    Cursor="Hand" VerticalAlignment="Center"
                                                    ToolTip="Cancel threaded reply — reply to post instead"/>
                                        </StackPanel>
                                    </Border>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Text="{Binding WhatsNew.ReplyText, UpdateSourceTrigger=PropertyChanged}"
                                                 AcceptsReturn="True" TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"
                                                 FontSize="12" Padding="8,6"
                                                 BorderBrush="#64B5F6" BorderThickness="1"
                                                 SpellCheck.IsEnabled="True"
                                                 GotFocus="ReplyTextBox_GotFocus"
                                                 LostFocus="ReplyTextBox_LostFocus">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="MinHeight" Value="36"/>
                                                    <Setter Property="MaxHeight" Value="60"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding WhatsNew.IsReplyExpanded}" Value="True">
                                                            <Setter Property="MinHeight" Value="100"/>
                                                            <Setter Property="MaxHeight" Value="200"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                        <!-- Feature 7: AI Assist button -->
                                        <Button Grid.Column="1" Content="AI" FontSize="10" FontWeight="Bold"
                                                Padding="6,4" Margin="4,0,0,0" Cursor="Hand"
                                                Background="#8E44AD" Foreground="White" BorderThickness="0"
                                                VerticalAlignment="Top" ToolTip="AI Writing Assist"
                                                Click="AiAssist_WhatsNewReply_Click"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal"
                                                HorizontalAlignment="Right" Margin="0,6,0,0">
                                        <TextBlock Text="{Binding WhatsNew.ReplyText, Converter={StaticResource CharCount}}"
                                                   Foreground="{Binding WhatsNew.ReplyText, Converter={StaticResource CharCountBrush}}"
                                                   FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding WhatsNew.SendError}" Foreground="#E74C3C"
                                                   FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                                   TextWrapping="Wrap" MaxWidth="300"
                                                   Visibility="{Binding WhatsNew.SendError, Converter={StaticResource NotNullToVis}}"/>
                                        <TextBlock Text="Sending..." FontStyle="Italic" Foreground="#3498DB"
                                                   FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"
                                                   Visibility="{Binding WhatsNew.IsSendingReply, Converter={StaticResource BoolToVis}}"/>
                                        <Button Command="{Binding WhatsNew.SendReplyCommand}"
                                                Background="#3498DB" Foreground="White" Padding="16,6"
                                                FontWeight="SemiBold" FontSize="12" BorderThickness="0" Cursor="Hand"
                                                IsEnabled="{Binding WhatsNew.IsSendingReply, Converter={StaticResource InverseBool}}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="Reply"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding WhatsNew.ReplyToComment, Converter={StaticResource NotNullToVis}}" Value="Visible">
                                                            <Setter Property="Content" Value="Reply to Thread"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Placeholder when no discussion is selected -->
                        <Border Grid.Column="2" Margin="4,0,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WhatsNew.HasDiscussion}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="Click a Trending Post or Platform Announcement to see its discussion"
                                       FontSize="12" Foreground="#999" FontStyle="Italic"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap" TextAlignment="Center" Padding="20"/>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            <!-- ═══ Shop Tab ═══ -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Shop" FontSize="13" Padding="8,4"/>
                </TabItem.Header>
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#ECF0F1" Padding="8,6" CornerRadius="4" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Shop.StatusText}"
                                       FontSize="11" Foreground="#555" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Refresh"
                                    Command="{Binding Shop.LoadCategoriesCommand}"
                                    Background="#3498DB" Foreground="White" Padding="12,4"
                                    FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                    IsEnabled="{Binding Shop.IsLoading, Converter={StaticResource InverseBool}}"/>
                        </Grid>
                    </Border>

                    <!-- Content: categories on left, items on right -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" MinWidth="150"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" MinWidth="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Categories list -->
                        <Border Grid.Column="0" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4"
                                Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#F8F9FA" Padding="8,6"
                                        BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                    <TextBlock Text="Categories" FontSize="12" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                </Border>
                                <ListBox Grid.Row="1" ItemsSource="{Binding Shop.Categories}"
                                         SelectedItem="{Binding Shop.SelectedCategory}"
                                         BorderThickness="0" Background="Transparent"
                                         HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8,6" Cursor="Hand">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="SemiBold"
                                                               Foreground="#2C3E50" TextWrapping="Wrap"/>
                                                    <TextBlock FontSize="10" Foreground="#999" Margin="0,2,0,0">
                                                        <Run Text="{Binding Count, Mode=OneWay}"/>
                                                        <Run Text=" item(s)"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <GridSplitter Grid.Column="1" Width="4" Background="#DEE2E6"
                                      HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

                        <!-- Items list -->
                        <Border Grid.Column="2" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4"
                                Background="White" Margin="4,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#F8F9FA" Padding="8,6"
                                        BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                    <TextBlock Text="{Binding Shop.ItemsStatus}" FontSize="11" Foreground="#555"/>
                                </Border>
                                <ListBox Grid.Row="1" ItemsSource="{Binding Shop.Items}"
                                         BorderThickness="0" Background="Transparent"
                                         HorizontalContentAlignment="Stretch"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="4,4,4,0" Padding="12,10" CornerRadius="6"
                                                    Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold"
                                                                   Foreground="#2C3E50" TextWrapping="Wrap"/>
                                                        <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#27AE60" Margin="0,4,0,0">
                                                            <Run Text="{Binding BasePriceBch, Mode=OneWay}"/>
                                                            <Run Text=" BCH"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                                        <Border CornerRadius="4" Padding="8,3">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#27AE60"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Available}" Value="False">
                                                                            <Setter Property="Background" Value="#95A5A6"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Foreground="White" FontSize="10" FontWeight="SemiBold">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text" Value="Available"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Available}" Value="False">
                                                                                <Setter Property="Text" Value="Unavailable"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <!-- Empty state (only shown when no items loaded) -->
                                <TextBlock Grid.Row="1"
                                           FontSize="12" Foreground="#999" FontStyle="Italic"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           TextWrapping="Wrap" TextAlignment="Center" Padding="20"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Select a category to browse items"/>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Shop.SelectedCategory}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!-- Catalog note -->
                                <TextBlock Grid.Row="1" Text="Browse the Gather merchandise catalog. Purchase endpoints are not yet available."
                                           FontSize="10" Foreground="#AAA" FontStyle="Italic"
                                           HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                           Margin="0,0,0,8" IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Log Tab -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Log" FontSize="13" Padding="8,4"/>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#2C3E50" Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Restart Polling" Click="RestartPolling_Click"
                                    Background="#E67E22" Foreground="White" Padding="12,4"
                                    FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                    ToolTip="Restart the polling service if it has stopped"/>
                            <Button Content="Clear Log" Click="ClearLog_Click"
                                    Background="#7F8C8D" Foreground="White" Padding="12,4" Margin="8,0,0,0"
                                    FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                <ListBox Grid.Row="1" ItemsSource="{Binding PollingLog.Entries}"
                         BorderThickness="0" Background="#1E1E1E"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         HorizontalContentAlignment="Stretch"
                         x:Name="LogListBox"
                         VirtualizingPanel.ScrollUnit="Pixel">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8,2"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                       Foreground="{Binding EntryType, Converter={StaticResource LogEntryBrush}}"
                                       TextWrapping="Wrap">
                                <Run Text="{Binding Timestamp, StringFormat='[{0:HH:mm:ss}]', Mode=OneWay}"
                                     Foreground="#777"/>
                                <Run Text=" "/>
                                <Run Text="{Binding Message, Mode=OneWay}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- ═══ Row 3: Status bar ═══ -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" Foreground="#BDC3C7" FontSize="11"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Foreground="#5DADE2" FontSize="11" Cursor="Hand"
                               MouseLeftButtonUp="ApiDocs_Click" Margin="0,0,16,0"
                               ToolTip="Open Gather.is API documentation in browser">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextDecorations" Value="None"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        API Docs
                    </TextBlock>
                    <TextBlock Foreground="#BDC3C7" FontSize="11">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=""/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="Connected"/>
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Connection error overlay -->
        <Border Grid.Row="2" Background="#FDECEA" Padding="12" Margin="8"
                VerticalAlignment="Top" CornerRadius="4"
                BorderBrush="#E74C3C" BorderThickness="1"
                Visibility="{Binding ConnectionError, Converter={StaticResource NotNullToVis}}">
            <TextBlock Text="{Binding ConnectionError}" Foreground="#C62828" TextWrapping="Wrap" FontSize="12"/>
        </Border>
    </Grid>
</Window>
